<%- include("template/cabecera", {tituloWeb: "Pokemon"}) %>

<div class="container">
    <h1>CRUD MongoDB</h1>
    <a class="btn btn-success btn-block my-4" href="/pokemon/crear">Crear nuevo Pokémon</a>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Tipo</th>
                <th scope="col">Descripción</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% if (arrayPokemon.length > 0) {%>
            
                <% arrayPokemon.forEach(pokemon => {%>
        
            <tr>
                <th scope="row"><%= pokemon.id %></th>
                <td><%= pokemon.nombre %></td>
                <td><%= pokemon.tipo %></td>
                <td><%= pokemon.descripcion %></td>
                <td><a class="btn btn-warning btn-sm" href="pokemon/<%= pokemon._id %>">Editar/Eliminar</a></td>
            </tr>
            <% }) %>
            <% } %>
        </tbody>
    </table>
</div>



<%- include("template/footer") %>